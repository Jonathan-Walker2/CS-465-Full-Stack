<h1>{{message}}</h1>
<h2>{{error.status}}</h2>
<pre>{{error.stack}}</pre>
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Error</title>
    <link rel="stylesheet" href="/css/style.css" type="text/css">
</head>
<body>
    <div id="background">
        <div id="page">
            {{> header }}
            <div id="contents">
                <div class="box">
                    <div>
                        <div class="body">
                            <h1>Error</h1>
                            <p>{{message}}</p>
                            {{#if error}}
                                <pre>{{error.stack}}</pre>
                            {{/if}}
                        </div>
                    </div>
                </div>
            </div>
            {{> footer }}
        </div>
    </div>
</body>
</html>
